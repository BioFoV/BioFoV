#!/bin/bash

################################################################################
#
# Qt5 clone and compilation
#
################################################################################

#CPUS=`nproc`
CPUS=1
SRCFLD="src-win"
DESTFLD="windows-build"

if [ ! -d qt ]; then
  mkdir qt
fi
cd qt

# Get source
if [ ! -d $SRCFLD ]; then
  if git clone git://gitorious.org/qt/qt5.git $SRCFLD;then
    echo "cloned"
  else
    echo "clone failed"
    exit
  fi
else
  cd $SRCFLD
  if git pull; then
    echo "pulled"
    cd ..
  else
    echo "pull failed"
    exit
  fi
fi

cd $SRCFLD
./init-repository
cd ..

# Build for windows
if [ ! -d $DESTFLD ]; then
  mkdir $DESTFLD
fi
cd $DESTFLD

../$SRCFLD/configure -xplatform win32-g++ \
                     -prefix ../../windows-install/ \
                     -opensource \
                     -skip qtwebkit \
                     -skip activeqt \
                     -release \
                     -nomake tests \
                     -nomake examples \
                     -static \
                     -confirm-license \
                     -opensource \
                     -qt-zlib \
                     -qt-libpng \
                     -qt-libjpeg \
                     -qt-freetype \
                     -no-xcb \
                     -qt-pcre \
                     -qt-xkbcommon \
                     -no-accessibility \
                     -no-opengl \
                     -device-option CROSS_COMPILE=i686-w64-mingw32- \
                     -no-pkg-config

make -j$CPUS
make install

cd .. 
